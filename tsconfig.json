{
    "compilerOptions": {
        "target": "es2015",
        "module": "commonjs",
        "jsx": "react",
        "declaration": true,
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "removeComments": true,
        "noLib": false,
        "emitDeclarationOnly": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "lib": ["dom", "es2015"]
    },
    "exclude": ["node_modules", "**/*.spec.tsx", "**/*.stories.tsx"]
}
